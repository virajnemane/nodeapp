version: '3'
services:
  app1:
    container_name: nodeapp1
    restart: always
    build: ./node_mongo
    ports:
      - '81:3000'
    links:
      - mongo
  app2:
    container_name: nodeapp2
    restart: always
    build: ./node_mongo
    ports:
      - '82:3000'
    links:
      - mongo
  mongo:
    container_name: mongo
    image: mongo
    ports:
      - '27017:27017'
  nginx:
    container_name: nginx
    build: ./nginx
    ports:
      - "8080:80"
    depends_on:
      - app1
      - app2
